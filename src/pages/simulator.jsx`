          placeholder="Ø£Ø¯Ø®Ù„ Ø§Ù„Ø±Ù…Ø² (Ù…Ø«Ù„ BTC/USD)"
          value={symbol}
          onChange={(e) => setSymbol(e.target.value)}
        />
        <select value={direction} onChange={(e) => setDirection(e.target.value)}>
          <option value="buy">Ø´Ø±Ø§Ø¡</option>
          <option value="sell">Ø¨ÙŠØ¹</option>
        </select>
        <button onClick={openTrade}>ÙØªØ­ ØµÙÙ‚Ø© ÙˆÙ‡Ù…ÙŠØ©</button>
      </div>

      <div style={{ marginTop: '2rem' }}>
        <h3>ğŸ“‹ ØµÙÙ‚Ø§ØªÙƒ Ø§Ù„ØªØ¬Ø±ÙŠØ¨ÙŠØ©</h3>
        <ul>
          {trades.map((t, i) => (
            <li key={i}>
              {t.symbol} â€” {t.direction === 'buy' ? 'ğŸŸ¢ Ø´Ø±Ø§Ø¡' : 'ğŸ”´ Ø¨ÙŠØ¹'} @ {t.time}
            </li>
